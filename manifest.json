{
    "manifest_version": 2,
    "name": "Certificate Info",
    "version": "1.0",
    "permissions": [
        "webRequest",
        "<all_urls>",
        "webRequestBlocking",
        "tabs"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    }
}
